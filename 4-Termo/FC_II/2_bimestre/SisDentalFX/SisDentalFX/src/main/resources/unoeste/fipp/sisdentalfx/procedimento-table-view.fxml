<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox minHeight="600.0" minWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="unoeste.fipp.sisdentalfx.ProcedimentoTableController">
   <children>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="36.0" style="-fx-background-color: darkgray;">
         <children>
            <TextField fx:id="tfPesquisa" onKeyPressed="#onPesquisar" prefHeight="25.0" prefWidth="593.0" promptText="Informa o procedimento">
               <font>
                  <Font size="23.0" />
               </font>
            </TextField>
            <Button mnemonicParsing="false" onAction="#onNovoProcedimento" prefHeight="31.0" prefWidth="60.0" text="+">
               <font>
                  <Font size="21.0" />
               </font>
            </Button>
         </children>
      </HBox>
      <TableView fx:id="tableView" prefHeight="435.0" prefWidth="800.0">
        <columns>
          <TableColumn fx:id="colID" minWidth="50.0" prefWidth="50.0" text="ID" />
          <TableColumn fx:id="colDesc" minWidth="300.0" prefWidth="100.0" text="DESCRIÇÃO" />
            <TableColumn fx:id="colTempo" minWidth="100.0" prefWidth="100.0" text="TEMPO" />
            <TableColumn fx:id="colValor" minWidth="100.0" prefWidth="100.0" text="VALOR R$" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" style="-fx-background-color: darkgray;">
         <children>
            <Button mnemonicParsing="false" onAction="#onFechar" prefHeight="57.0" prefWidth="137.0" text="Fechar">
               <font>
                  <Font size="22.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
